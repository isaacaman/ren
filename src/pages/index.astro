---
import { getCollection } from "astro:content";
import Hero from "@/components/Hero.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Section from "@/components/Section.astro";
import C2fetch from "@/components/C2fetch.astro";
import TicTacToe from "@/components/TicTacToe.astro";
import NumberMaster from "@/components/NumberMaster.astro";
import Todohcj from "@/components/Todohcj.astro";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import VillainImg from "@/villain.png";
import { KNOWN_TECH, ABOUT_ME } from "@/consts";
const projects = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Aqua - Engineer, GFX designer and High school student">
  <Hero />
  <Section
    title="My projects"
    className={"bg-gradient-to-b from-black/70 from-[5%] to-black via-black max-w-screen-2xl mx-auto items-center"}
  >
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4">
      <C2fetch/>
      <TicTacToe/>
      <Todohcj/>
      <NumberMaster/>
    </div>
  </Section>
  <Section title="Technologies I Know" full_screen={false}>
    <div class="w-full grid place-items-center">
      <div
        class="w-full gap-4 flex flex-wrap px-3 max-w-xl text-lg justify-center"
      >
        {KNOWN_TECH.map((x) => <Breadcrumb title={x} />)}
      </div>
    </div>
  </Section>
  <Section title="About Me">
    <div
      class="relative w-full grid grid-cols-1 sm:grid-cols-2 gap-4 items-center px-4 sm:px-8 lg:px-16"
    >
      {/* Left column: Hero image */}
      <div class="w-full flex justify-center">
        <Image
          alt="Hero"
          src={VillainImg}
          class="brightness-200 invalid max-w-xs sm:max-w-sm md:max-w-md w-full h-auto object-contain invert"
        />
      </div>

      {/* Right column: Text content */}
      <div
        class="max-w-2xl text-base sm:text-lg md:text-xl opacity-90 text-justify space-y-4"
      >
        <h3 class="text-2xl sm:text-4xl opacity-95 mb-4">
          Hi, I'm Aman (AKA Aqua / Quietpulse).
        </h3>
        <p class="opacity-95">{ABOUT_ME}</p>
        <p class="opacity-95">
          My social media can be found in the nav bar above ^_^
        </p>
      </div>
    </div>
  </Section>

  <h1 class="text-xl sm:text-4xl opacity-95 text-center mt-20 -mb-24">Thanks for visiting! ‧₊˚🪐</h1>

</Layout>
